{
    "compileOnSave": false,
    "compilerOptions": {
        "sourceMap": true,
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "removeComments": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "lib": ["es2017", "dom"],
        "outDir": "dist"
    },
    "exclude": [
        "node_modules",
        "dist",
        "examples"
    ],
    "include": [
        "src"
    ],
    "atom": {
        "rewriteTsconfig": false
    }
}
